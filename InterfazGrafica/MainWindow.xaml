<Window x:Class="InterfazGrafica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazGrafica"
        mc:Ignorable="d"
        Title="Mi primera ventana" Height="600" Width="900">
    <!-- Esto es un comentario -->
    <StackPanel>
        <!-- Texto plano -->
        <!-- 
            Orden de margenes:
            Left, Top, Right, Bottom
        -->
        <TextBlock TextAlignment="Center" Margin="20,15,20,0">Correo:</TextBlock>
        <!-- Caja para introducir texto -->
        <TextBox Margin="20,15,20,0"></TextBox>
        <TextBlock TextAlignment="Center" Margin="20,15,20,0">Contraseña:</TextBlock>
        <PasswordBox Margin="20,15,20,0"></PasswordBox>
        <Button Margin="250,15,250,0">Iniciar Sesion</Button>
    </StackPanel>
</Window>
